---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Understand your customer",
    description:
      "We analyse customer behaviour across demographics, so you can maximise revenue.",
    icon: "simple-icons:homeassistant",
  },
  {
    title: "Decrease Payroll Costs",
    description:
      "By predicting peak customer hours, we help you intelligently create staff rotas to save money.",
    icon: "bx:shield-x",
  },
  {
    title: "Product insights",
    description:
      "We help you perfect product placement by tracking dwell time and customer paths.",
    icon: "uil:keyhole-square-full",
  },
  {
    title: "Peace-of-mind",
    description:
      "Our software alerts you of suspicious behaviour and intrusions in your store 24/7.",
    icon:"bx:water",
  },
  {
    title: "Store Comparison",
    description:
      "Compare the efficiency of your stores with our metrics as well as POS metrics.",
    icon: "simple-icons:clockify",
  },
  {
    title: "Employee Evaluation",
    description:
      "Gain unique insights into employee-customer interactions using data only available from video.",
    icon: "uil:keyhole-circle",
  },
];
---

<div class="mt-16 md:mt-0">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    What we do for your store
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    We enable you to make data-driven decisions to realise your store&#39;s potential. 
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>

