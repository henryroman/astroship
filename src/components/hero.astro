---
import { Picture } from "astro:assets";
import myimage from "../../public/heroimages.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import {webhook2} from "../../config";
import {webhook3} from "../../config";

const clonelink = await fetch(webhook3).then((response) => response.text());
const teenlink = await fetch(webhook2).then((response) => response.text());

const clonelink1 = "/" + clonelink
const teenlink1 = "/" + teenlink
---
<style>
  /* Dropdown container */
  .dropdown {
    position: relative;
    display: inline-block;
  }

  /* Dropdown content (hidden by default) */
  .dropdown-content {
    display: none;
    position: absolute;
    background-color: white;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    min-width: 160px;
    z-index: 1;
  }

  /* Show the dropdown */
  .dropdown:hover .dropdown-content {
    display: block;
  }

  /* Dropdown button styling */
  .dropdown-content a {
    color: white;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
  }
</style>

<main class="grid lg:grid-cols-2 place-items-center pt-46 pb-8 md:pt-20 md:pb-44 lg:pb">
  <div class="py-6 md:order-1 hidden md:block ml-6 md:ml-0">
    <Picture
      src={myimage}
      alt="Nursery filled with teen and adult cannabis plants"
      sizes="(max-width: 900px) 200vw, 720px"
      loading="eager"
      widths={[800, 1000, 1200]}
      style={"border-radius: 25px;"}
    />
  </div>

  <div>
    <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold tracking-tight lg:tracking-tighter mt-0 sm:mt-0 lg:mt-0 px-4 lg:px-0">
      Huge harvests everytime
    </h1>
    <p class="text-base sm:text-lg mt-4 text-slate-600 max-w-xl px-4 lg:px-0">
      The highest quality cannabis teens and clones ready to flip in 8 weeks.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3 px-4 lg:px-0">
      <!-- Dropdown Container -->
      <div class="dropdown">
        <Link
          target="_self"
          class="flex gap-1 items-center justify-center px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-all"
          rel="noopener"
          href="#"
        >
          Download our menu
        </Link>
        <!-- Dropdown Content -->
        <div class="dropdown-content">
          <Link
            href={teenlink1}
            download={teenlink}
            class="flex gap-1 items-center px-4 py-2"
          >
            Teen Menu
          </Link>
          <Link
            href={clonelink1}
            download={clonelink}
            class="flex gap-1 items-center px-4 py-2"
          >
            Clone Menu
          </Link>
        </div>
      </div>

      <Link
        size="lg"
        class="flex gap-1 items-center justify-center px-6 py-2 border border-gray-300 rounded-md hover:border-gray-400 transition-all"
        rel="noopener"
        href="tel:+1-714-222-0114"
        target="_self"
      >
        Call our team
      </Link>
    </div>
    <ul class="mt-10 px-4 lg:px-0 space-y-2">
      <li>
        <Icon name="simple-icons:ticktick" class="w-5 h-5 inline-block text-green-600" />
        Zero-Generation Tissue Clones
      </li>
      <li>
        <Icon name="simple-icons:ticktick" class="w-5 h-5 inline-block text-green-600" />
        2 Gallon Pots
      </li>
      <li>
        <a href="/blog">
          <Icon name="simple-icons:ticktick" class="w-5 h-5 inline-block text-green-600" />
          Breeder certified genetics
        </a>
      </li>
    </ul>
  </div>
</main>
